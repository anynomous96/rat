    <style>
      body {
        height: 100vh;
        font-family: Arial, sans-serif;
        background-color: #bababa;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .container1 {
        height: 80%;
        width: 27.5%;
        margin: 0 auto;
        padding: 9px;
        background-color: #ffffff;
        border-radius: 50px;
        /* box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); */
        box-shadow: 32px 32px 64px #d5bfd2;
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .input {
        height: 40px;
      }

      h2 {
        text-align: center;
        margin-bottom: 32px;
        font-weight: 700;
      }

      #email {
        width: 90%;
